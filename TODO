  console.log('request', req.url);

  if(!isNaN(numDice) && !isNaN(diceType)){
    console.log('valid request, rolling dice');
    numDice = numDice > 10 ? 10 : numDice;
    diceType = diceType > 20 ? 20 : diceType;
